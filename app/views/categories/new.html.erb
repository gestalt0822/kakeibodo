<div class="main_contents">
  <h2>新しい項目を追加</h2>
  <%= render partial: 'form' %>

  <table class="table table-bordered design-table">
    <tr class="success">
      <th>カテゴリー名</th><th></th>
    </tr>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to '削除', category_path(category), method: :delete, class: 'btn btn-default btn-xs btn-primary' %>
          <%= link_to '修正', edit_category_path(category) , class: 'btn btn-default btn-xs btn-danger' %>
        </td>
      <tr>
    <% end %>
   </table>
</div>
