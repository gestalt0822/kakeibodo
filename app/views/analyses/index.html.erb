

<div class="main_contents">
  <h2>集計(今月)</h2>
  <div class="row">
    <div class="col-sm-7 col-xs-12">
      <div class="graph">
        <%= pie_chart @graph_now, colors: ["#cce198", "#7ecef4","#aa89bd","#f19ec2","#e63f11","#f19149","#32b16c","#448aca","#5f52a0","#ea68a2","#eb6100","#8fc31f","#009e96"] %>
      </div>
    </div>

    <div class="col-sm-5 col-xs-12">
      <table class="table table-bordered design-table">
        <tr class="success"><th>項目</th><th>金額</th><th>割合</th></tr>
        <% if @amounts_now.count == 0 %>
          <tr><td colspan="3"><p class="text_center">なし</p></td></tr>
        <% end %>
        <% @amounts_now.each do |elm1, elm2, elm3| %>
          <tr>
            <td><%= elm1 %></td><td><%= elm2 %>円</td><td><%= elm3 %>％</td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <h2>集計(先月まで)</h2>

  <div class="row">
    <div class="col-sm-7 col-xs-12">
      <div class="graph">
        <%= pie_chart @graph_then, colors: ["#cce198", "#7ecef4","#aa89bd","#f19ec2","#e63f11","#f19149","#32b16c","#448aca","#5f52a0","#ea68a2","#eb6100","#8fc31f","#009e96"]  %>
      </div>
    </div>

      <div class="col-sm-5 col-xs-12">
        <table class="table table-bordered design-table">
          <tr class="success"><th>項目</th><th>金額</th><th>割合</th></tr>
          <% if @amounts_then.count == 0 %>
            <tr><td colspan="3"><p class="text_center">なし</p></td></tr>
          <% end %>
          <% @amounts_then.each do |elm1, elm2, elm3| %>
            <tr>
              <td><%= elm1 %></td><td><%= elm2 %>円</td><td><%= elm3 %>％</td>
            </tr>
          <% end %>
        </table>
      </div>
  </div>

  <div class="links">
   <%= link_to '戻る', :back %>
  </div>
</div>
