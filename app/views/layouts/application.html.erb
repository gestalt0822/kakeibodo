<!DOCTYPE html>
<html>
<head>
  <title>Kakeibodo</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <h1 id="main_title"><%= link_to root_path do %><%= image_tag 'logo.jpg' %><% end %></h1>
  <div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Dropdown
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
      <% if user_signed_in? %>
        <li><%= link_to '一覧・新規入力', bookings_path %></li>
        <li><%= link_to 'チャレンジ一覧', challenges_path %></li>
        <li><%= link_to '新チャレンジ', new_challenge_path %></li>
        <li><%= link_to '集計', analyses_path %><li>
        <li><%= link_to 'マイページ', user_path(current_user) %></li>
        <li role="separator" class="divider"></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
        <li><%= link_to 'ユーザー情報編集', edit_user_registration_path %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path %></li>
        <li><%= link_to '新規登録', new_user_registration_path %></li>
      <% end %>
    </ul>
  </div>
</header>

<div id="contents" class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
  <%= yield %>
</div>

<footer>
  <p>運営： 株式会社AokiEngineering<br />
  © 2016-2017 Copyright AokiEngineering Corp</p>
</footer>

</body>
</html>
