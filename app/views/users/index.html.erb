<div class="main_contents">
  <h2>ユーザーランキング</h2>
  <ul class="list_info">
    <% if current_user.public == true %>
    <li>あなたは<%= User.all.count %>人中、<span class="point"><%= @your_rank %>位</span>です！</li>
    <% unless @your_rank == 1 %>
      <li><%= @next_rank %>位との差は<span class="point"><%= @difference %>ポイント</span>です!</li>
    <% end %>
    <% end %>
  </ul>
  <% @users.each.with_index(1) do |user,index| %>
    <div class="col-xs-12">
      <% if index == 1 %>
        <div class="gold_user row">
      <% elsif index == 2 %>
        <div class="silver_user row">
      <% elsif index == 3 %>
        <div class= "bronze_user row">
      <% else %>
        <div class="each_user row">
      <% end %>
          <div class="col-xs-4">
            <% if user.avatar.present? %>
              <%= image_tag user.avatar, size: '130x130', class:'img-responsive user_image' %>
            <% else %>
              <%= image_tag 'no_image.png', size: '130x130', class:'img-responsive user_image' %>
            <% end %>
          </div>

          <div class="col-xs-4">
              <ul class="user_detail wf-roundedmplus1c">
                <li><b><%= user.name %></b>さん</li>
                <li>
                  <% if index == 1 %>
                    <span class="gold"><%= user.total_score %></span>
                  <% elsif index == 2 %>
                    <span class="silver"><%= user.total_score %></span>
                  <% elsif index == 3 %>
                    <span class="bronze"><%= user.total_score %></span>
                  <% else %>
                    <span class="point"><%= user.total_score %></span>
                  <% end %>ポイント
                <li>
                <% if index == 1 %>
                  <span class="gold"><%= index %>位</span>
                <% elsif index == 2 %>
                  <span class="silver"><%= index %>位</span>
                <% elsif index == 3 %>
                  <span class="bronze"><%= index %>位</span>
                <% else %>
                  <span class="point"><%= index %>位</span>
                <% end %>
                </li>
              </ul>
          </div>

          <div class="col-xs-4">
            <% if index == 1 %>
              <%= image_tag '0173_gold.png', size: '130x130', class:'img-responsive medal'  %>
            <% elsif index == 2 %>
              <%= image_tag '0172_silver.png', size: '130x130', class:'img-responsive medal'  %>
            <% elsif index == 3 %>
              <%= image_tag '0171_bronze.png', size: '130x130', class:'img-responsive medal'  %>
            <% else %>
            <% end %>

          </div>
      </div>
    </div>
  <% end %>
  <div class="links">
    <%= link_to '戻る', :back %>
  </div>
</div>
