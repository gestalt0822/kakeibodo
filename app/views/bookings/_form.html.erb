<%= form_for(@booking) do |f| %>
  <div class="row basic_form">
    <div class="col-sm-4 col-xs-6">
      <%= f.label :金額 %><br />
      <%= f.text_field :amount, autofocus: true, class: "form-control" %>
    </div>
    <div class="col-sm-4 col-xs-6">
      <%= f.label :詳細 %><br />
      <%= f.text_field :detail, autofocus: true, class: "form-control" %>
    </div>

      <div class="col-sm-4 col-xs-6">
        <%= f.label :日付 %><br />
        <%= f.date_select :date, use_month_numbers: true %>
      </div>
      <div class="not_display">
        <%= f.label :時間 %>
        <%= f.time_select :date %>
      </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <%= f.label :項目 %>
      <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: '以下から選択', class:'bookings_form3' %>
    </div>
    <div id="select_sort" class="col-xs-6">
      <%= f.label :細目 %>
      <%= f.collection_select :sort_id, Sort.all, :id, :name, include_blank: '以下から選択', class:'bookings_form3' %>
    </div>
    <div class="bookings_form">
      <%= f.submit '投稿', class: 'btn btn-info btn-block btn-margin' %>
    </div>
  </div>

<% end %>

<div class="row bookings_form2">
  <div class="col-xs-6">
    <span id="show_btn">項目を追加</span>
    <div id="hide_area">
      <%= render partial: 'new_category' %>
      <span id="close">閉じる</span>
    </div>
  </div>

  <div class="col-xs-6">
    <span id="show_btn2">細目を追加</span>
    <div id="hide_area2">
      <%= render partial: 'new_sort' %>
      <span id="close2">閉じる</span>
    </div>
  </div>
</div>
