<%= form_for(@booking) do |f| %>
  <div class="form-group">
    <%= f.label :金額 %>
    <%= f.text_field :amount, autofocus: true , class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :詳細 %>
    <%= f.text_field :detail, autofocus: true , class: "form-control" %>
  </div>
  <%= f.submit '投稿', class: 'btn btn-info btn-block btn-margin' %>
<% end %>
