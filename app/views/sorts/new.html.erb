<div class="main_contents">
  <h2>細目の追加</h2>
  <%= render partial: 'form' %>
  <table class="table table-bordered design-table">
    <tr class="success"><th>細目名</th><th>親カテゴリー</th><th></th></tr>
    <% @sorts.each do |sort| %>
      <tr>
        <td><%= sort.name %></td>
        <td><%= sort.category.name %></td>
        <td>
          <%= link_to '変更', edit_sort_path(sort), class: 'btn btn-default btn-xs btn-warning' %>
          <%= link_to '削除', sort_path(sort), method: :delete, class: 'btn btn-default btn-xs btn-danger' %>
        </td>
        <tr>
    <% end %>
  </table>
  <div class="links">
    <%= link_to '戻る', :back %>
  </div>
</div>
